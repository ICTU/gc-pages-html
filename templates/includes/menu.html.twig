{% set default_url = '#' %}


<nav id="menu-primary" class="main-menu" role="navigation">

  <h2 class="visually-hidden">Hoofdmenu</h2>

  <ul id="mainnav" class="main-menu__list">
    {% for item in menu_items %}

      {% set classes = [
        'main-menu__item',
        item.sub ? 'main-menu__item--with-sub'
      ] %}

      <li class="{{ classes|join(' ') }}">

        <a href="{{ item.url ? item.url : '#' }}" class="menu-link">{{ item.title }}</a>

        {% if item.sub %}
          <button class="main-menu__open-sub" data-ol-has-click-handler="">Open submenu {{ item.title }}</button>

          <ul class="main-menu__sublist" aria-hidden="false">
            {% for sub in item.sub %}
              <li class="main-menu__item main-menu__item--sub"><a href="{{ sub.url ? sub.url : '#' }}" class="menu-link"
                                                                  aria-expanded="false">{{ sub.title }}</a></li>
            {% endfor %}
          </ul>

        {% endif %}
      </li>

    {% endfor %}
  </ul>
</nav>