{#
 /** Download box
 * Template for displaying a download
 *
 * Variables:
 * - title: The title of the download
 * - descr: Description
 * - meta: arrat of metadata items (filetype, filesize)
 *
 * SCSS:
 * - components/download-box.scss
 */
#}

<section class="download-box{{ descr ? ' download-box--with-descr' }}">
  <h3>{{ title }}</h3>


  {% if meta %}
    {% include 'components/meta-data.html.twig' with {'items': meta } %}
  {% endif %}

  {% if descr %}
    <p class="download__description">{{ descr }}</p>
  {% endif %}

  <a href="#" class="btn btn--download" download="" aria-label="{{ title }}">Download</a>
</section>