{% if title is empty %}
  {% set title = 'Kaartje zonder titel' %}
{% endif %}

{% if descr is empty %}
  {% set descr = 'Dit is de omschrijving van het kaartje. Hier kan de samenvatting in of de eerste tekst van de detailpagina.' %}
{% endif %}

{% set styles = [
  'author',
  'author--card',
  img ? 'author--with-image' : 'author--no-image'

] %}

<div class="{{ styles|classlist }}">
  <div class="card__image">
    {% if img is not empty %}
      <img src="/uploads/styles/author/{{ img }}" alt="{{ title }}" class="image image--doelgroep">
    {% endif %}
  </div>
  <div class="author__content">
    {% if type == 'event' %}
      {% include 'components/date-badge.html.twig' %}
    {% endif %}
    <h3 class="author__title">
      <a href="{{ url ? url : '#' }}">{{ title }}</a>
    </h3>

    <span class="author__function">{{ function }}</span>

  </div>
</div>
